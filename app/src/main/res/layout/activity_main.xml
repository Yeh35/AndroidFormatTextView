<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.yeh35.android.widget.formattextview.FormatTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20sp" />

    <com.yeh35.android.widget.formattextview.FormatTextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20sp"
        android:textColor="#FF009900"
        android:textStyle="bold"/>


    <com.yeh35.android.widget.formattextview.FormatTextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#444444"
        android:textSize="20sp"
        android:textColor="#000000"
        app:formatTextStyle="bold|italic"
        app:formatTextColor="#FF00FF"
        app:formatTextSize="40sp"
        app:pressedFormatTextColor="#FF0000"/>

    <com.yeh35.android.widget.formattextview.FormatTextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20sp"
        app:formatTextStyle="bold|italic"
        app:formatTextColor="#FF00FF"
        app:formatTextSize="40sp"
        app:pressedFormatTextColor="#FF0000"
        app:pressedFormatTextBackgroundColor="#00FF00"/>

</LinearLayout>